<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddNewMedia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/textView15"
            style="@style/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add To Library"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnAddBookToLib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add book to library"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

        <Button
            android:id="@+id/btnAddGameToLib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addGameLibrary"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

        <Button
            android:id="@+id/btnAddWatchToLib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addMediaToLibrary"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darker_blue" />

        <TextView
            android:id="@+id/textView14"
            style="@style/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new media to the database"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnNewBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_book"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_game"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

        <Button
            android:id="@+id/btnNewMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_movie"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

        <Button
            android:id="@+id/btnNewSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_series"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darker_blue" />

        <TextView
            android:id="@+id/textView16"
            style="@style/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new authors or genres"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnManageAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_authors"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

        <Button
            android:id="@+id/btnManageGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Genres"
            android:textColor="@color/black"
            app:backgroundTint="@color/secondary_red" />

    </LinearLayout>
</FrameLayout>